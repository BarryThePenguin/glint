{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Glint --build --watch",
      "program": "${workspaceFolder}/packages/core/bin/glint.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "args": [
        "--build",
        "--watch"
      ],
      "cwd": "${workspaceFolder}/test-packages/build-watch"
    },
    {
      "name": "Debug Extension",
      "type": "pwa-extensionHost",
      "request": "launch",
      "preLaunchTask": "npm: build",
      "autoAttachChildProcesses": true,
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "${workspaceFolder}/test-packages"
      ]
    }
  ]
}