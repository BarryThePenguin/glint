  },
  "volta": {
    "node": "12.16.2",
    "yarn": "1.22.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "prettier": "^2.1.1",
    "release-it": "^14.4.1",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.0",
    "typescript": "^4.1.5"
  },
  "version": "0.4.4"
}
