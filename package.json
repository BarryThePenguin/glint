{
  "name": "glint",
  "repository": "https://github.com/typed-ember/glint",
  "private": true,
  "workspaces": [
    "packages/*",
    "test-packages/*"
  ],
  "scripts": {
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test",
