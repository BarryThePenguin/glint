{
  "name": "@glint/core",
  "version": "0.9.7",
  "repository": "typed-ember/glint",
  "description": "A CLI for performing typechecking on Glimmer templates",
  "license": "MIT",
  "author": "Dan Freeman (https://github.com/dfreeman)",
  "type": "module",
  "main": "lib/index.js",
