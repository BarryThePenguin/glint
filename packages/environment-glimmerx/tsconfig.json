{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "composite": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    // Not ideal, but several of the @glimmer packages fairly consistently
    // produce type errors across different versions.
    "skipLibCheck": true
  },
  "include": ["src", "types"],
  "references": [{ "path": "../template" }, { "path": "../config" }]
}
